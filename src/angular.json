{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "microsoft.iis.web-manager": {
      "root": "",
      "sourceRoot": "app",
      "projectType": "application",
      "schematics": {},
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:browser",
          "options": {
            "outputPath": "../dist/app",
            "index": "app/index.html",
            "main": "app/main/main.ts",
            "polyfills": "app/main/polyfills.ts",
            "tsConfig": "app/tsconfig.json",
            "assets": [
              {
                "glob": "manifest.json",
                "input": "app/resources",
                "output": ""
              },
              {
                "glob": "**/*",
                "input": "app/assets/",
                "output": "assets/"
              },
              {
                "glob": "**/*",
                "input": "node_modules/monaco-editor/min",
                "output": "assets/monaco"
              },
              "app/web.config"
            ],
            "scripts": [
              "./node_modules/jquery/dist/jquery.min.js"
            ],
            "styles": [
              "./node_modules/primeng/resources/primeng.min.css",
              "./node_modules/primeng/resources/themes/bootstrap/theme.css",
              "./node_modules/bootstrap/dist/css/bootstrap.min.css",
              "./node_modules/font-awesome/css/font-awesome.min.css",
              "./themes/main.css",
              "./themes/themes.common.css",
              "themes/themes.wac.css"
            ],
            "showCircularDependencies": false
          },
          "configurations": {
            "wac": {
              "fileReplacements": [
                {
                  "replace": "app/main/app-routing.module.ts",
                  "with": "app/main/app-routing.module.wac.ts"
                },
                {
                  "replace": "app/main/app.addon.ts",
                  "with": "app/main/app.addon.wac.ts"
                },
                {
                  "replace": "app/main/main.ts",
                  "with": "app/main/main.wac.ts"
                },
                {
                  "replace": "app/main/app.component.html",
                  "with": "app/main/app.component.wac.html"
                },
                {
                  "replace": "app/environments/environment.ts",
                  "with": "app/environments/environment.wac.ts"
                }
              ]
            },
            "wac.prod": {
              "fileReplacements": [
                {
                  "replace": "app/main/app-routing.module.ts",
                  "with": "app/main/app-routing.module.wac.ts"
                },
                {
                  "replace": "app/main/app.addon.ts",
                  "with": "app/main/app.addon.wac.ts"
                },
                {
                  "replace": "app/main/main.ts",
                  "with": "app/main/main.wac.ts"
                },
                {
                  "replace": "app/main/app.component.html",
                  "with": "app/main/app.component.wac.html"
                },
                {
                  "replace": "app/environments/environment.ts",
                  "with": "app/environments/environment.wac.prod.ts"
                }
              ],
              "optimization": true,
              "outputHashing": "all",
              "sourceMap": false,
              "extractCss": true,
              "namedChunks": false,
              "aot": true,
              "extractLicenses": false,
              "vendorChunk": false,
              "buildOptimizer": true
            }
          }
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "browserTarget": "microsoft.iis.web-manager:build"
          },
          "configurations": {
            "wac": {
              "browserTarget": "microsoft.iis.web-manager:build:wac"
            },
            "wac.prod": {
              "browserTarget": "microsoft.iis.web-manager:build:wac.prod"
            }
          }
        },
        "extract-i18n": {
          "builder": "@angular-devkit/build-angular:extract-i18n",
          "options": {}
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {}
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {}
        }
      }
    }
  },
  "defaultProject": "microsoft.iis.web-manager"
}